<!-- 		</beans:constructor-arg> -->
<!-- 	</beans:bean> -->

	<beans:bean id="uploadPath" class="java.lang.String"> <beans:constructor-arg 
		value="C:\\zzz\upload"> </beans:constructor-arg> </beans:bean>

	<context:component-scan base-package="com.recruit.controller" />
</beans:beans>